{% extends "layouts/default.njk" %}
{% block content -%}
{% import 'macros/header.njk' as header -%}
{{header.nav('bg-black', 'border-dark', 'navbar-dark', '')}}
    <main id="content">

        <!-- Hero -->
        <div class="container py-5 py-lg-6 text-center">
            <h1 class="display-3 mb-5">Photography</h1>
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <blockquote class="blockquote text-center">
                        <p class="font-italic">When words become unclear, I shall focus with photographs. When images become inadequate, I shall be content with silence.</p>
                        <footer class="blockquote-footer text-secondary">Ansel Adams</footer>
                    </blockquote>
                </div>
            </div>
        </div>

        <!-- Projects -->
        <div class="container pb-5">

            <div class="row grid" data-colcade="columns: .col-md-6, items: .grid-item">
                <div class="col-md-6"></div>
                <div class="col-md-6"></div>

                <a href="project-3.html" class="grid-item">
                    <figure class="img-color pb-2">
                        <img src="assets/img/autumn-leafs.jpg" alt="Autumn leafs" class="img-fluid mb-2">
                        <figcaption class="h5 font-weight-light text-light text-center">Autumn</figcaption>
                    </figure>
                </a>

                <a href="project-3.html" class="grid-item">
                    <figure class="img-color pb-2">
                        <img src="assets/img/wooden-house.jpg" alt="Skogafoss Stairs - Iceland" class="img-fluid mb-2">
                        <figcaption class="h5 font-weight-light text-light text-center">Winter</figcaption>
                    </figure>
                </a>

                <a href="project-3.html" class="grid-item">
                    <figure class="img-color pb-2">
                        <img src="assets/img/seashore.jpg" alt="Seashore during golden hour" class="img-fluid mb-2">
                        <figcaption class="h5 font-weight-light text-light text-center">Summer</figcaption>
                    </figure>
                </a>

                <a href="project-3.html" class="grid-item">
                    <figure class="img-color pb-2">
                        <img src="assets/img/cherry-blossoms.jpg" alt="Cherry blossom tree under clear blue sky" class="img-fluid mb-2">
                        <figcaption class="h5 font-weight-light text-light text-center">Spring</figcaption>
                    </figure>
                </a>

                <a href="project-3.html" class="grid-item">
                    <figure class="img-color pb-2">
                        <img src="assets/img/time-square.jpg" alt="Time Square - New York" class="img-fluid mb-2">
                        <figcaption class="h5 font-weight-light text-light text-center">Cities</figcaption>
                    </figure>
                </a>

                <a href="project-3.html" class="grid-item">
                    <figure class="img-color pb-2">
                        <img src="assets/img/people.jpg" alt="People smiling" class="img-fluid mb-2">
                        <figcaption class="h5 font-weight-light text-light text-center">People</figcaption>
                    </figure>
                </a>

            </div>
        </div>

        <!-- Call to action -->
        <div class="bg-primary text-dark">
            <div class="container py-6">
                <div class="row justify-content-center align-items-center">
                    <div class="col-lg-6 border-lg-right border-dark pr-lg-5">
                        <h3 class="display-4 mb-4 text-lg-right">Would you like to see more?</h3>
                    </div>
                    <div class="col-lg-6 pl-lg-5">
                        <p class="lead">Duis aute irure dolor in reprehenderit in voluptate.</p>
                        <a href="contact.html" class="btn btn-outline-black">Contact Us</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
    {% import 'macros/footer.njk' as footer -%}
    {{footer.footer('bg-white', 'text-dark')}}
{% endblock %}
