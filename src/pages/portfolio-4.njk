{{header.nav('bg-black', 'bg-dark', 'navbar-dark', '')}}
    <main id="content">

        <!-- Hero -->
        <div class="container py-5 pt-lg-6">
            <h1 class="display-3">Web Design</h1>
            <hr class="border-2 border-light my-4 ml-0 text-left w-15" role="presentation">
            <div class="row">
                <div class="col-lg-9">
