                </div>
                <div class="col-lg-6 order-lg-1">
                    <a href="project-4.html">
                        <figure class="img-overlay">
                            <img src="assets/img/portfolio-3.jpg" alt="..." class="border-dark img-thumbnail">
                            <div class="img-hover">
                                <span class="img-text">View Project</span>
                            </div>
                        </figure>
                    </a>
                </div>
            </div>
        </div>

        <!-- Brands -->
        <div class="bg-light py-5">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-4 col-md-2 py-3">
                        <img src="assets/img/logo-dribbble.svg" alt="Dribbble logo">
                    </div>
                    <div class="col-4 col-md-2 py-3">
                        <img src="assets/img/logo-github.svg" alt="Github logo">
                    </div>
                    <div class="col-4 col-md-2 py-3">
                        <img src="assets/img/logo-paypal.svg" alt="Paypal logo">
                    </div>
                    <div class="col-4 col-md-2 py-3">
